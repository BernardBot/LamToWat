                       megaparsec >= 9.0.1,
                       mtl >= 2.2.2,
                       parser-combinators >= 1.3.0,
                       directory >= 1.3.6.0,
                       shake >= 0.19.4

  hs-source-dirs:      .
                       src
                       src/Tps
                       src/Cps
                       src/Common

  default-language:    Haskell2010

